{
  "name": "HandshakeAI Workflow Helper",
  "description": "Streamline your workflow between Multimango and Handshake AI with automated task tracking and QA feedback synchronization.",
  "version": "1.0.3",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/store-icon-128.png"
  },
  "optional_permissions": [
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://ai.joinhandshake.com/annotations/fellow/task/*/run",
    "https://www.multimango.com/tasks/*",
    "https://www.multimango.com/qa-feedback"
  ],
  "background": {
    "service_worker": "scripts/workers/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.multimango.com/*"],
      "js": ["scripts/content/multimango.ts"]
    },
    {
      "matches": ["https://ai.joinhandshake.com/fellow/projects/*", "https://ai.joinhandshake.com/annotations/fellow/task/*"],
      "js": ["scripts/content/handshake.ts"]
    }
  ]
}